//# publish
module 0x42::Tester
struct T has drop
  v: u64

public fun new(l0: u64): T
    move_loc l0
    pack T
    ret

public fun update(l0: &mut T)
    local l1: &mut u64
    move_loc l0
    mut_borrow_field T, v
    st_loc l1
    ld_u64 1
    move_loc l1
    write_ref
    ret

public fun vref(l0: &mut T): &u64
    local l1: &u64
    copy_loc l0
    borrow_field T, v
    st_loc l1
    move_loc l0
    pop
    move_loc l1
    ret




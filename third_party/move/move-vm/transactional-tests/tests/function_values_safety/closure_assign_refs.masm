use 0x66::helpers as h

fun fail()
    local f: |u64|u32 has copy+drop
    call h::f_copy_drop
    st_loc f
    mut_borrow_loc f // ERROR: mutable f
    ld_u64 5
    call h::exec_twice
    ld_u32 50
    call 0x66::helpers::assert_eq
    ret

<div class="flex flex-col lg:flex-row gap-8 sm:gap-24 xl:gap-48 justify-between flex-[2]">
  <div>
    <div class="max-w-prose mb-12 font-light sm:text-lg">
      <%= render 'shared/it2_intro' %>
    </div>
    <%= render ButtonComponent.new(size: :large, class: 'w-full mb-6', dialog: @login_dialog) do %>
      Sign up
    <% end %>
    <%= render ButtonComponent.new(href: new_user_session_path, size: :large, scheme: :secondary, class: 'w-full') do %>
      Log in
    <% end %>
    <%= render @login_dialog do |dialog| %>
      <%= dialog.with_title do %>
        Sign up
      <% end %>
      <%= dialog.with_body do %>
        <div class="flex flex-col gap-3 outline-none" autofocus tabindex="-1">
          <%= render LoginButtonComponent.new(provider: :discord, size: :large, class: 'mb-4 w-full') %>
          <%= render LoginButtonComponent.new(provider: :google, size: :large, class: 'mb-4 w-full') %>
          <%= render LoginButtonComponent.new(provider: :github, size: :large, class: 'w-full') %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

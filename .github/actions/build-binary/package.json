{
  "name": "build-binary-action",
  "version": "1.0.0",
  "description": "GitHub Action to build Rust binaries with Nix",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts"
  },
  "keywords": [
    "actions",
    "rust",
    "nix",
    "build"
  ],
  "author": "Movement Labs",
  "license": "Apache-2.0",
  "dependencies": {
    "@actions/artifact": "^2.1.0",
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@iarna/toml": "^2.2.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}

{
    "name": "move-analyzer",
    "displayName": "move-analyzer",
    "description": "A language server and basic grammar for the Move programming language.",
    "publisher": "move",
    "license": "Apache-2.0",
    "version": "0.0.1-dev",
    "preview": true,
    "homepage": "https://developers.diem.com/docs/move/move-overview",
    "repository": {
        "url": "https://github.com/diem/diem.git",
        "type": "git"
    },
    "bugs": {
        "url": "https://github.com/diem/diem/issues"
    },
    "engines": {
        "vscode": "^1.60.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "keywords": [
        "move"
    ],
    "contributes": {
        "languages": [
            {
                "id": "move",
                "aliases": [
                    "Move",
                    "move"
                ],
                "extensions": [
                    ".move"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "move",
                "scopeName": "source.move",
                "path": "./move.tmLanguage.json"
            }
        ]
    },
    "scripts": {
        "package": "vsce package -o move-analyzer.vsix",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "tsfmt --verify && eslint . --ext ts --max-warnings 0",
        "fix": "tsfmt --replace && eslint . --ext ts --fix",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/tests/runTests.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.4",
        "@types/mocha": "^9.0.0",
        "@types/node": "14.x",
        "@types/vscode": "^1.60.0",
        "@typescript-eslint/eslint-plugin": "^4.31.1",
        "@typescript-eslint/parser": "^4.31.1",
        "@vscode/test-electron": "^1.6.1",
        "eslint": "^7.32.0",
        "glob": "^7.1.7",
        "mocha": "^9.1.1",
        "typescript": "^4.4.3",
        "typescript-formatter": "^7.2.2",
        "vsce": "^1.100.1",
        "vscode-test": "^1.6.1"
    }
}

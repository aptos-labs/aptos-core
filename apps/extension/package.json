{
  "name": "@aptos-wallet/extension",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^2.0.1",
    "@chakra-ui/react": "^2.1.2",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fortawesome/fontawesome-svg-core": "^6.1.1",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@react-icons/all-files": "^4.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.25",
    "@types/numeral": "^2.0.2",
    "@types/react-dom": "^18.0.2",
    "@types/react-router-dom": "^5.3.3",
    "@vespaiach/axios-fetch-adapter": "^0.3.0",
    "aptos": "1.2.0",
    "axios": "^0.27.2",
    "buffer": "^6.0.3",
    "constate": "^3.3.2",
    "framer-motion": "^6",
    "numeral": "^2.0.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.30.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "tweetnacl": "^1.0.3",
    "webextension-polyfill": "^0.9.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "dev": "react-scripts start",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "tauri": "tauri",
    "prebuild": "rimraf build",
    "profile": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist/",
    "build": "yarn run lint:fix && GENERATE_SOURCEMAP=false yarn run build:app && yarn run build:bg && yarn run build:inpage && yarn run build:prompt",
    "build:dev": "yarn run lint:fix && yarn run build:app && yarn run build:bg && yarn run build:inpage && yarn run build:prompt",
    "build:tauri": "yarn tauri build --target aarch64-apple-darwin",
    "build:app": "INLINE_RUNTIME_CHUNK=false react-scripts build",
    "build:bg": "webpack --mode production ./src/scripts/background.js --output-path ./build --output-filename background.js",
    "build:inpage": "webpack --mode production ./src/scripts/inpage.js --output-path ./build --output-filename inpage.js",
    "build:prompt": "webpack --mode production ./src/scripts/prompt.jsx --output-path ./build --output-filename prompt.jsx",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@aptos-wallet/eslint-config": "*",
    "@babel/preset-react": "^7.17.12",
    "@tauri-apps/cli": "^1.0.0-rc.13",
    "@types/chrome": "^0.0.183",
    "@types/react": "^18.0.6",
    "@types/webextension-polyfill": "^0.8.3",
    "npm-run-all": "^4.1.5",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.3",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0"
  }
}

{
  "name": "@petra/extension",
  "version": "0.1.14",
  "private": true,
  "dependencies": {
    "@chakra-ui/icons": "^2.0.6",
    "@chakra-ui/react": "^2.2.6",
    "@chakra-ui/toast": "^3.0.4",
    "@emotion/react": "^11",
    "@emotion/styled": "^11",
    "@fortawesome/free-solid-svg-icons": "^6.1.1",
    "@fortawesome/react-fontawesome": "^0.2.0",
    "@react-icons/all-files": "^4.1.0",
    "@scure/bip39": "^1.1.0",
    "@segment/analytics-next": "^1.43.0",
    "@vespaiach/axios-fetch-adapter": "^0.3.0",
    "@zxcvbn-ts/core": "^2.0.3",
    "@zxcvbn-ts/language-common": "^2.0.1",
    "@zxcvbn-ts/language-en": "^2.0.1",
    "aptos": "1.3.14",
    "axios": "^0.27.2",
    "boring-avatars": "^1.7.0",
    "bs58": "^5.0.0",
    "buffer": "^6.0.3",
    "constate": "^3.3.2",
    "date-fns": "^2.29.2",
    "ed25519-hd-key": "^1.3.0",
    "numeral": "^2.0.6",
    "pbkdf2": "^3.1.2",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hook-form": "^7.30.0",
    "react-query": "^3.39.0",
    "react-router-dom": "^6.3.0",
    "react-scripts": "5.0.1",
    "react-syntax-highlighter": "^15.5.0",
    "react-text-mask": "^5.4.3",
    "react-transition-group": "^4.4.5",
    "text-mask-addons": "^3.8.0",
    "tweetnacl": "^1.0.3",
    "webextension-polyfill": "^0.9.0"
  },
  "scripts": {
    "start": "react-app-rewired start",
    "dev": "react-app-rewired start",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "tauri": "tauri",
    "prebuild": "rimraf build",
    "profile": "webpack --profile --json > stats.json && webpack-bundle-analyzer stats.json dist/",
    "build": "yarn run lint:fix && GENERATE_SOURCEMAP=false yarn run build:app",
    "build:dev": "yarn run build:app",
    "build:tauri": "yarn tauri build --target aarch64-apple-darwin",
    "build:app": "INLINE_RUNTIME_CHUNK=false react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "webextensions": true
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not ie <= 99",
      "not android <= 4.4.4",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.18.10",
    "@babel/preset-react": "^7.17.12",
    "@chakra-ui/styled-system": "^2.2.5",
    "@chakra-ui/system": "^2.2.4",
    "@petra/eslint-config": "*",
    "@tauri-apps/cli": "^1.0.0-rc.13",
    "@types/chrome": "^0.0.183",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.6.5",
    "@types/numeral": "^2.0.2",
    "@types/pbkdf2": "^3.1.0",
    "@types/react": "^18.0.6",
    "@types/react-dom": "^18.0.6",
    "@types/react-router-dom": "^5.3.3",
    "@types/react-text-mask": "^5.4.11",
    "@types/react-transition-group": "^4.4.5",
    "@types/webextension-polyfill": "^0.8.3",
    "html-webpack-plugin": "^5.5.0",
    "npm-run-all": "^4.1.5",
    "react-app-rewired": "^2.2.1",
    "ts-loader": "^9.3.0",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "^4.6.3",
    "webpack": "^5.74.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0"
  }
}
